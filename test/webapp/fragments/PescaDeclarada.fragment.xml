<core:FragmentDefinition controllerName="com.tasa.test.controller.PescaDeclarada" xmlns="sap.ui.table" xmlns:m="sap.m" xmlns:u="sap.ui.unified" xmlns:f="sap.f" xmlns:core="sap.ui.core">

	<m:Panel id="0008" expandable="false">
		<m:content>
			<Table
				id="table"
				selectionMode="MultiToggle"
				rows="{/ProductCollection}"
				visibleRowCount="7"
				enableCellFilter="{ui>/cellFilterOn}"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar id="ext_pesca_declarada" style="Clear">
						<m:Title id="title" text="Cantidad de pesca en bodegas: "/>
						<m:Text text="50 "/>
						<m:Text text="TM"/>
						<m:ToolbarSpacer/>
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all filters"
							press="clearAllFilters"/>
						<m:ToolbarSeparator/>
						<m:SearchField
							placeholder="Filter"
							value="{ui>/globalFilter}"
							search="filterGlobally"
							width="15rem"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column
						width="11rem"
						filterProperty="Name">
						<m:Label text="Cod. especie" />
						<template>
							<m:Text text="{Name}" wrapping="false" />
						</template>
					</Column>
					<Column
						width="11rem"
						filterProperty="Category"
						defaultFilterOperator="StartsWith">
						<m:Label text="Especie" />
						<template>
							<m:Text text="{Category}" wrapping="false" />
						</template>
					</Column>
					<Column id="col_porc_pesc_desc" width="9rem">
						<m:Label text="% pesca" />
						<template>
							<m:Link text="Show Image" href="{ProductPicUrl}" target="_blank"/>
						</template>
					</Column>
					<Column
						id="availability"
						width="9rem"
						filterProperty="Available"
						showFilterMenuEntry="false"
						defaultFilterOperator="EQ"
						filterType="sap.ui.model.type.Boolean">
						<m:Label text="Pesca declarada" />
						<template>
							<m:ObjectStatus text="{Status}" state="{
								path: 'Available',
								formatter: '.formatAvailableToObjectState'
							}"/>
						</template>
					</Column>
					<Column
						id="price"
						width="9rem"
						filterProperty="Price">
						<m:Label text="UM" />
						<template>
							<u:Currency value="{Price}" currency="{CurrencyCode}"/>
						</template>
					</Column>
					<Column
						id="clm_moda_pescDecl"
						width="10rem"
						hAlign="End"
						filterProperty="Quantity"
						filterType="sap.ui.model.type.Integer">
						<m:Label text="Moda" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
					<Column
						width="10rem"
						hAlign="End"
						filterProperty="Quantity"
						filterType="sap.ui.model.type.Integer">
						<m:Label text="Observacion" />
						<template>
							<m:Label text="{
								path: 'Quantity',
								type: 'sap.ui.model.type.Integer'
							}" />
						</template>
					</Column>
				</columns>
				
			</Table>

		</m:content>
	</m:Panel>

</core:FragmentDefinition>